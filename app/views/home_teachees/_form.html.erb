<%= form_for @home_teachee, :html => {:class => 'form-horizontal'} do |f| %>
  <div class='form-group'>
    <%= f.label :first_name, class: 'col-sm-2 col-sm-offset-2 control-label' %>
    <div class='col-sm-4'>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :last_name, class: 'col-sm-2 col-sm-offset-2 control-label' %>
    <div class='col-sm-4'>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>
  <%= f.fields_for :contact_info do |ci| %>
    <div class='form-group'>
      <%= ci.label :email, class: 'col-sm-2 col-sm-offset-2 control-label' %>
      <div class='col-sm-4'>
        <%= ci.text_field :email, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= ci.label :phone1, class: 'col-sm-2 col-sm-offset-2 control-label' %>
      <div class='col-sm-4'>
        <%= ci.text_field :phone1, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= ci.label :phone2, class: 'col-sm-2 col-sm-offset-2 control-label' %>
      <div class='col-sm-4'>
        <%= ci.text_field :phone2, class: 'form-control' %>
      </div>
    </div>
  <% end %>
  <%= f.fields_for :address do |ad| %>
    <div class='form-group'>
      <%= ad.label :street_number, class: 'col-sm-2 col-sm-offset-2 control-label' %>
      <div class='col-sm-4'>
        <%= ad.text_field :street_number, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= ad.label :city, class: 'col-sm-2 col-sm-offset-2 control-label' %>
      <div class='col-sm-4'>
        <%= ad.text_field :city, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= ad.label :state, class: 'col-sm-2 col-sm-offset-2 control-label' %>
      <div class='col-sm-4'>
        <%= ad.text_field :state, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= ad.label :zipcode, class: 'col-sm-2 col-sm-offset-2 control-label' %>
      <div class='col-sm-4'>
        <%= ad.text_field :zipcode, class: 'form-control' %>
      </div>
    </div>
  <% end %>
  <div class='col-sm-5 col-sm-offset-3'>
    <%= f.submit 'Submit', class: 'form-control btn btn-success' %>
  </div>
<% end %>
